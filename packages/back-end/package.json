{
  "name": "back-end",
  "version": "1.0.0",
  "description": "The back-end infrastructure for the Pokemon League Draft",
  "main": "index.js",
  "author": "Brendan Tierney (Tiernebre)",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "precompile": "yarn clean",
    "compile": "tsc -p tsconfig.json",
    "predebug": "yarn compile",
    "debug": "nodemon --inspect dist/app.js",
    "format": "prettier --write .",
    "lint:fix": "yarn lint:code --fix && yarn format",
    "lint:code": "eslint src/** --ext .ts --max-warnings 0",
    "lint:style": "prettier --check .",
    "prestart": "yarn compile",
    "start": "node dist/app.js",
    "test": "yarn lint:code && yarn lint:style && jest",
    "test:unit": "jest"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@types/jest": "^26.0.22",
    "@types/koa": "^2.13.1",
    "@types/koa__router": "^8.0.4",
    "@types/node": "^14.14.37",
    "@types/node-fetch": "^2.5.10",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "2.2.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "testdouble": "^3.16.1",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@koa/router": "^10.0.0",
    "koa": "^2.13.1",
    "node-fetch": "^2.6.1",
    "pino": "^6.11.2"
  }
}
