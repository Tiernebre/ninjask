{
  "name": "back-end",
  "version": "1.0.0",
  "description": "The back-end infrastructure for the Ninjask",
  "main": "index.js",
  "author": "Brendan Tierney (Tiernebre)",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "precompile": "yarn clean",
    "compile": "tsc -p tsconfig.json",
    "predebug": "yarn compile",
    "debug": "nodemon --inspect dist/app.js",
    "format": "prettier --write .",
    "lint": "yarn lint:code && yarn lint:style",
    "lint:fix": "yarn lint:code --fix && yarn format",
    "lint:code": "eslint src/** --ext .ts --max-warnings 0",
    "lint:style": "prettier --check .",
    "prestart": "yarn compile",
    "start": "node dist/app.js",
    "test": "ts-node ./dockest",
    "test:int": "ts-node ./dockest --onlyRunIntegrationTests",
    "test:unit": "jest -c jest.unit.config.js --watch"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@types/bcrypt": "^5.0.0",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^27.0.2",
    "@types/jest-when": "^2.7.2",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/koa": "^2.13.4",
    "@types/koa-basic-auth": "^2.0.4",
    "@types/koa-bodyparser": "^4.3.2",
    "@types/koa-route": "^3.2.4",
    "@types/koa-websocket": "^5.0.7",
    "@types/koa__cors": "^3.0.3",
    "@types/koa__router": "^8.0.8",
    "@types/lodash": "^4.14.175",
    "@types/node": "^16.10.3",
    "@types/node-fetch": "^2.5.12",
    "@types/pino": "^6.3.11",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.1",
    "@types/ws": "^7.4.6",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "dockest": "^2.1.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-jest-dom": "^3.9.2",
    "eslint-plugin-testing-library": "^4.12.4",
    "flush-promises": "^1.0.2",
    "jest": "^26.6.3",
    "jest-when": "^3.3.0",
    "nodemon": "^2.0.13",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.6",
    "testdouble": "^3.16.2",
    "ts-jest": "^26.5.6",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@koa/router": "^10.1.1",
    "bcrypt": "^5.0.1",
    "dotenv": "^10.0.0",
    "http-status": "^1.5.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.3",
    "koa-basic-auth": "^4.0.0",
    "koa-bodyparser": "^4.3.0",
    "koa-route": "^3.2.0",
    "koa-websocket": "^6.0.0",
    "lodash": "^4.17.21",
    "node-fetch": "^2",
    "pg": "^8.7.1",
    "pino": "^6.13.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.38",
    "typeorm-naming-strategies": "^2.0.0",
    "uuid": "^8.3.2",
    "ws": "^7.5.3",
    "zod": "^3.9.8"
  }
